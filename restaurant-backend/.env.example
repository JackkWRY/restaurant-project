# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL connection string (REQUIRED)
DATABASE_URL="postgresql://username:password@localhost:5432/restaurant_db"

# ========================================
# JWT CONFIGURATION
# ========================================
# JWT Secret for access tokens (REQUIRED - minimum 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# JWT Secret for refresh tokens (REQUIRED - minimum 32 characters, should be different from JWT_SECRET)
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-in-production-min-32-chars

# JWT Token Expiry (Optional - defaults shown)
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ========================================
# SERVER CONFIGURATION
# ========================================
# Server port (Optional - default: 3001)
PORT=3001

# Node environment (Optional - default: development)
# Options: development, production, test
NODE_ENV=development

# Frontend URL for CORS (Optional - default: http://localhost:3000)
CLIENT_URL=http://localhost:3000

# CORS Origin (Optional - if set, will be added to allowed origins)
CORS_ORIGIN=http://localhost:3000

# ========================================
# RATE LIMITING (Optional)
# ========================================
# Rate limit window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (default: 300)
RATE_LIMIT_MAX=300

# ========================================
# PAGINATION (Optional)
# ========================================
# Default items per page (default: 10)
PAGINATION_DEFAULT_LIMIT=10

# Maximum items per page (default: 100)
PAGINATION_MAX_LIMIT=100

# ========================================
# LOGGING (Optional)
# ========================================
# Log level (Optional - default: debug in dev, info in production)
# Options: error, warn, info, debug
LOG_LEVEL=debug

# ========================================
# CLOUDINARY CONFIGURATION (Optional)
# ========================================
# Required for image upload functionality
# Sign up at https://cloudinary.com to get these credentials
# NOTE: If you set any Cloudinary variable, ALL THREE must be set

CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ========================================
# VALIDATION NOTES
# ========================================
# ‚úÖ REQUIRED variables (app will not start without these):
#    - DATABASE_URL
#    - JWT_SECRET (min 32 chars)
#    - REFRESH_TOKEN_SECRET (min 32 chars)
#
