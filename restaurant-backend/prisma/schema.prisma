// --------------------------------------------------------
// 1. Config & Generator
// --------------------------------------------------------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------------------------
// 2. Settings & Users
// --------------------------------------------------------
model Setting {
  key   String @id
  value String
}

model User {
  id            Int            @id @default(autoincrement())
  username      String         @unique
  password      String
  role          String         @default("STAFF")
  createdAt     DateTime       @default(now())
  refreshTokens RefreshToken[]

  @@index([username])
  @@index([role])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

// --------------------------------------------------------
// 3. Category & Menu
// --------------------------------------------------------
model Category {
  id        Int       @id @default(autoincrement())
  name      String
  deletedAt DateTime?
  menus     Menu[]
}

model Menu {
  id            Int         @id @default(autoincrement())
  nameTH        String
  nameEN        String
  description   String?
  price         Decimal     @db.Decimal(10, 2)
  imageUrl      String?
  isAvailable   Boolean     @default(true)
  isVisible     Boolean     @default(true)
  isRecommended Boolean     @default(false)
  deletedAt     DateTime?
  categoryId    Int
  category      Category    @relation(fields: [categoryId], references: [id])
  orderItems    OrderItem[]

  @@index([categoryId])
  @@index([isRecommended])
  @@index([deletedAt])
  @@index([isVisible, isAvailable])
}

// --------------------------------------------------------
// 4. Table
// --------------------------------------------------------
model Table {
  id             Int     @id @default(autoincrement())
  name           String  @unique
  qrCode         String?
  isOccupied     Boolean @default(false)
  isAvailable    Boolean @default(true)
  isCallingStaff Boolean @default(false)
  orders         Order[]
  bills          Bill[]

  @@index([isAvailable])
  @@index([isOccupied])
}

// --------------------------------------------------------
// 5. Bill
// --------------------------------------------------------
model Bill {
  id            String     @id @default(uuid())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  closedAt      DateTime?  @default(now())
  status        BillStatus @default(OPEN)
  totalPrice    Decimal    @default(0) @db.Decimal(10, 2)
  paymentMethod String?
  tableId       Int
  table         Table      @relation(fields: [tableId], references: [id])
  orders        Order[]

  // Single column indexes
  @@index([status])
  @@index([closedAt])
  @@index([tableId])
  // Composite indexes for common queries
  @@index([tableId, status]) // For active bill lookup
  @@index([status, closedAt]) // For bill history queries
}

// --------------------------------------------------------
// 6. Order
// --------------------------------------------------------
model Order {
  id         Int         @id @default(autoincrement())
  createdAt  DateTime    @default(now())
  status     OrderStatus @default(PENDING)
  totalPrice Decimal     @db.Decimal(10, 2)
  tableId    Int
  table      Table       @relation(fields: [tableId], references: [id])
  items      OrderItem[]
  billId     String?
  bill       Bill?       @relation(fields: [billId], references: [id])

  // Single column indexes
  @@index([status])
  @@index([tableId])
  @@index([billId])
  @@index([createdAt])
  // Composite indexes for common queries
  @@index([tableId, status]) // For table-specific order filtering
  @@index([status, createdAt]) // For kitchen queue (FIFO)
  @@index([billId, status]) // For bill calculation
}

// --------------------------------------------------------
// 7. OrderItem
// --------------------------------------------------------
model OrderItem {
  id       Int         @id @default(autoincrement())
  quantity Int
  note     String?
  status   OrderStatus @default(PENDING)

  menuId Int
  menu   Menu @relation(fields: [menuId], references: [id])

  orderId Int
  order   Order @relation(fields: [orderId], references: [id])

  // Single column indexes
  @@index([menuId])
  @@index([status])
  @@index([orderId])
  // Composite index for order item filtering
  @@index([orderId, status]) // For filtering items by order and status
}

// --------------------------------------------------------
// 8. Enums
// --------------------------------------------------------
enum OrderStatus {
  PENDING
  COOKING
  READY
  SERVED
  COMPLETED
  CANCELLED
}

enum BillStatus {
  OPEN
  PAID
  CANCELLED
}
